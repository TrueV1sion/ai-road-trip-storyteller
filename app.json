{
  "expo": {
    "name": "AI Road Trip Storyteller",
    "slug": "ai-road-trip-storyteller", 
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "ai-road-trip",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f0f23"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.ai-road-trip-storyteller",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses location to provide personalized stories and navigation guidance during your road trips.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses location to provide personalized stories and navigation guidance during your road trips.",
        "NSCameraUsageDescription": "This app uses camera to capture memories during your journey.",
        "NSMicrophoneUsageDescription": "This app uses microphone for voice interactions and story creation."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#0f0f23"
      },
      "package": "com.yourcompany.ai_road_trip_storyteller",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "RECORD_AUDIO",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-location",
      "expo-camera",
      [
        "expo-secure-store",
        {
          "faceIDPermission": "Allow AI Road Trip Storyteller to access Face ID biometric data for secure authentication."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}